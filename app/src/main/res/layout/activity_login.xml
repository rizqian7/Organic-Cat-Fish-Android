<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:layout_marginTop="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Sebagai"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/nunito_sans_extra_bold_italic"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btn_peternaklele"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_two"
            android:textColor="@color/buttonText"
            android:fontFamily="@font/nunito_sans_regular"
            android:layout_gravity="center"
            android:text="Peternak Lele"/>

        <Button
            android:id="@+id/btn_rumahmakan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_two"
            android:textColor="@color/buttonText"
            android:fontFamily="@font/nunito_sans_regular"
            android:layout_gravity="center"
            android:text="Rumah Makan"/>

        <Button
            android:id="@+id/btn_driver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_two"
            android:textColor="@color/buttonText"
            android:fontFamily="@font/nunito_sans_regular"
            android:layout_gravity="center"
            android:text="Driver"/>
    </LinearLayout>
</RelativeLayout>